{
  "name": "YuGame – абсурдная угадай-ка",
  "short_name": "YuGame",
  "description": "Неоновая PWA-игра: тысячи абсурдных фраз, Gmail-логин, офлайн-режим и AI-чат.",
  "start_url": "https://absudia.com/?utm_source=pwa",
  "scope": "https://absudia.com/",
  "display": "standalone",
  "display_override": ["standalone", "browser"],
  "background_color": "#111111",
  "theme_color": "#667eea",

  "icons": [
    { "src": "/icon-192.png", "sizes": "192x192", "type": "image/png" },
    { "src": "/icon-512.png", "sizes": "512x512", "type": "image/png" },
    { "src": "/icon-512.png", "sizes": "144x144", "type": "image/png", "purpose": "any maskable" },
    { "src": "/icon-512.png", "sizes": "128x128", "type": "image/png" },
    { "src": "/icon-512.png", "sizes": "96x96",   "type": "image/png" },
    { "src": "/icon-512.png", "sizes": "72x72",   "type": "image/png" }
  ],

  "shortcuts": [
    {
      "name": "Случайная фраза",
      "short_name": "Next",
      "url": "/#random",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Открыть чат",
      "short_name": "Chat",
      "url": "/#chat",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "text": "shared_text",
      "title": "shared_title",
      "url": "shared_url"
    }
  },

  "file_handlers": [
    {
      "action": "/open-json",
      "accept": {
        "text/json": [".json"]
      }
    }
  ],

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.absudia.yugame",
      "id": "com.absudia.yugame"
    }
  ]
}
